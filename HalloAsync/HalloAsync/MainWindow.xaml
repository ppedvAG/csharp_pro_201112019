<Window x:Class="HalloAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HalloAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <StackPanel Margin="6">
        <Button IsEnabled="False" Click="StartOhneThread">Start ohne Threading</Button>
        <Button Click="StartTask">Start Task</Button>
        <Button Click="StartTaskmitTS">Start Task mit TaskScheduler</Button>
        <Button Click="StartAsyncAwait">Start Async/Await</Button>
        <Button Click="StartAsyncAwaitSQL">Async/Await SQL</Button>
        <Button Click="StartAlteLangsameMethode">Start alt und langsam</Button>
        
        <Button Click="Abort">Abbrechen</Button>
        <ProgressBar IsIndeterminate="true" Height="23" Name="pb1" />
    </StackPanel>
</Window>
